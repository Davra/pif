{
    "env": {
        "es2021XXX": true,
        "browser": true,
        "node": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaVersionXXX": 6,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "standard/no-callback-literal": "off",
        "brace-style": ["error", "stroustrup", { "allowSingleLine": true }]
    },
    "globals": {
        "$": "readonly"
    }
}
