{
    "env": {
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "standard/no-callback-literal": "off",
        "brace-style": ["error", "stroustrup", { "allowSingleLine": true }]
    },
    "globals": {
        "$": "readonly"
    }
}
